{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src/**/*", "plugins/**/*", "types/**/*"],
  "exclude": ["node_modules", "dist", "vendor"]
}
